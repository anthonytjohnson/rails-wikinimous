<%= form_for(@article) do |f| %>
  <div class="col-sm-8 col-sm-offset-2 mb-3">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <%= f.submit %>
  </div>

<% end %>
